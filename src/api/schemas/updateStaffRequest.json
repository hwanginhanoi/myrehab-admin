{
  "type": "object",
  "description": "Base update request for staff",
  "discriminator": {
    "propertyName": "staffType",
    "mapping": {
      "DOCTOR": "#/components/schemas/UpdateDoctorRequest",
      "TRAINER": "#/components/schemas/UpdateTrainerRequest",
      "ADMIN": "#/components/schemas/UpdateAdminRequest",
      "SUPER_ADMIN": "#/components/schemas/UpdateSuperAdminRequest"
    }
  },
  "oneOf": [
    { "$ref": "#/components/schemas/UpdateDoctorRequest" },
    { "$ref": "#/components/schemas/UpdateTrainerRequest" },
    { "$ref": "#/components/schemas/UpdateAdminRequest" },
    { "$ref": "#/components/schemas/UpdateSuperAdminRequest" }
  ],
  "properties": {
    "staffType": {
      "type": "string",
      "description": "Staff type discriminator",
      "enum": ["DOCTOR", "TRAINER", "ADMIN", "SUPER_ADMIN"]
    },
    "email": {
      "type": "string",
      "description": "Staff email address",
      "example": "doctor@myrehab.com"
    },
    "fullName": {
      "type": "string",
      "description": "Staff full name",
      "example": "Dr. John Smith"
    },
    "phoneNumber": {
      "type": "string",
      "description": "Staff phone number",
      "example": "+81-90-1234-5678"
    },
    "description": {
      "type": "string",
      "description": "Staff description or bio"
    },
    "permissions": {
      "type": "array",
      "description": "List of permission codes assigned to this staff member",
      "items": { "type": "string" }
    }
  },
  "required": ["email", "fullName", "staffType"],
  "x-readme-ref-name": "UpdateStaffRequest"
}
